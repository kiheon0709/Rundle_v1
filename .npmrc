# pnpm 설정
node-linker=hoisted

# React Native/Expo 패키지들을 루트로 호이스팅
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=@react-navigation/*
public-hoist-pattern[]=@babel/*
public-hoist-pattern[]=bcrypt
public-hoist-pattern[]=@mapbox/*
public-hoist-pattern[]=iconv-lite
public-hoist-pattern[]=*

# Metro bundler가 패키지를 찾을 수 있도록
shamefully-hoist=true
