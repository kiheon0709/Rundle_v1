{
  "name": "rundle",
  "version": "1.0.0",
  "private": true,
  "description": "Rundle - Run the Route, Own the Moment",
  "scripts": {
    "dev:server": "pnpm --filter @rundle/server dev",
    "dev:mobile": "pnpm --filter @rundle/mobile dev",
    "build": "turbo run build",
    "build:server": "pnpm --filter @rundle/server build",
    "build:mobile": "pnpm --filter @rundle/mobile build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @rundle/server db:migrate",
    "db:seed": "pnpm --filter @rundle/server db:seed"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
