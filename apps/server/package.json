{
  "name": "@rundle/server",
  "version": "1.0.0",
  "private": true,
  "description": "Rundle Backend Server",
  "scripts": {
    "dev": "npx nest start --watch",
    "build": "npx nest build",
    "start": "node dist/main",
    "start:prod": "node dist/main",
    "lint": "npx eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "npx eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "npx tsc --noEmit",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:cov": "npx jest --coverage",
    "db:migrate": "npx typeorm migration:run -d dist/config/typeorm.config.js",
    "db:migrate:revert": "npx typeorm migration:revert -d dist/config/typeorm.config.js",
    "db:migrate:generate": "npx typeorm migration:generate -d dist/config/typeorm.config.js",
    "db:migrate:create": "npx typeorm migration:create",
    "db:seed": "npx ts-node src/database/seeds/run-seed.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/jwt": "^10.2.0",
    "typeorm": "^0.3.20",
    "pg": "^8.11.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "bcrypt": "^5.1.1",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/bcrypt": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
